{% extends 'base.html.twig' %}

{% block title %}Je m'inscris || Anky{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{asset('/css/register.css')}}">
{% endblock %}

{% block body %}

<section class="absolute register">

    <a href="{{path('welcome')}}" alt="Retourner à la page d'accueil de Anky">
        <i class="fas fa-chevron-left"></i>
    </a>

    <article>
        <img src="/img/logo-small.svg" title="Logo de Anky | Version medium">
        <h1>Je m'inscris<br>
        gratuitement</h1>
    </article>

    {{ form_start(registrationForm, {
        'attr' : {'class' : 'form'}
    }) }}
        {{ form_row(registrationForm.email, {
            'attr': {
                'class': 'input',
                'autocomplete': 'email'
                },
            'label': 'E-mail',
        }) }}
        {{ form_row(registrationForm.pseudo, {
            'attr': {
                'class': 'input',
                'autocomplete': 'pseudo'
                },
            'label': "Nom d'utilisateur",
        }) }}
        {{ form_row(registrationForm.plainPassword, {
            'attr': {
                'class': 'input',
                'autocomplete': 'new-password'
                },
            'label': 'Mot de passe',
        }) }}
        {{ form_row(registrationForm.agreeTerms,{
            'attr': {
                'class': 'check',
                },
            'label': "J'accepte les conditions générales d'utilisation et la politique de confidentialité"
        }) }}
        <div>
            <span class="checkmark">
                <i class="fas fa-check"></i>
            </span>
        </div>

        <article class="break">
            <h1>Une dernière étape...</h1>
            <p>Dis nous les genres de séries que tu aimes</p>
        </article>

        {{ form_row(registrationForm.genre, {
            label: " ",
        }) }}

        <button type="submit">C'est parti</button>
    {{ form_end(registrationForm) }}

</section>

<script src="/script/floatingLabel.js"></script>
<script src="/script/checkmark.js"></script>
<script src="/script/genreSelected.js"></script>

{% endblock %}
