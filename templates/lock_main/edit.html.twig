{% extends 'base.html.twig' %}

{% block stylesheets %}
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-+0n0xVW2eSR5OomGNYDnhzAbDsOXxcvSN1TPprVMTNDbiYZCxYbOOl7+AMvyTG2x" crossorigin="anonymous">
{% endblock %}



{% block body %}

<main class="container">

    {% for type, messages in app.flashes %}
        {% for un_message in messages %}
            <p class="alert alert-{{type}}">{{ un_message }}</p>
        {% endfor %}
    {% endfor %}

    <h2>Résumé</h2>

    {% if lockMain is defined %}

        {% if lockMain is empty %}
            <p>Rien n'a été trouvé</p>
        {% else %}
            <p><b>ID : </b>{{ lockMain.id }}</p>
            <p><b>Title : </b>{{ lockMain.title }}</p>
            <p><b>Question : </b>{{ lockMain.text }}</p>
        {% endif %}

    {% else %}

        {% if lockQuestion is defined %}

            {% if lockQuestion is empty %}
                <p>Rien n'a été trouvé</p>
            {% else %}
                <p><b>Affilié à :</b> {{ lockQuestion.MainId.title }}</p>
                <p><b>Choix :</b> {{ lockQuestion.question }}</p>
                <p><b>Lien :</b> {{ lockQuestion.link }}</p>
            {% endif %}

        {% endif %}

    {% endif %}

    <br>

    <h3>Modifier</h3>
    {{ form(edit )}}

</main>

{% endblock %}
