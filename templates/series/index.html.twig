{% extends 'base.html.twig' %}

{% block stylesheets %}
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-+0n0xVW2eSR5OomGNYDnhzAbDsOXxcvSN1TPprVMTNDbiYZCxYbOOl7+AMvyTG2x" crossorigin="anonymous">
{% endblock %}

{% block body %}
    {% if categorie is empty %}
        <p>Aucune catégorie trouvée</p>
    {% else %}
        <h1>Catégories</h1>
        <table class="table">
            <thead>
                <tr>
                    <th>Catégorie</th>
                    <th>Modifier</th>
                    <th>Supprimer</th>
                </tr>
            </thead>
            <tbody>
                {% for c in categorie%}
                    <tr>
                        <td>{{ c.cat }}</td>
                        <td></td>
                        <td></td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    {% endif %}
    {{ form(ajoutCategorie) }}

    <hr>

    {% if genre is empty %}
        <p>Aucun genre trouvé</p>
    {% else %}
        <h1>Genre</h1>
        <table class="table">
            <thead>
                <tr>
                    <th>Genre</th>
                    <th>Modifier</th>
                    <th>Supprimer</th>
                </tr>
            </thead>
            <tbody>
                {% for g in genre%}
                    <tr>
                        <td>{{ g.gen }}</td>
                        <td></td>
                        <td></td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    {% endif %}
    {{ form(ajoutGenre) }}


    <hr>

    {% if serie is empty %}
        <p>Aucune série trouvé</p>
    {% else %}
        <h1>Séries</h1>
        <table class="table">
            <thead>
                <tr>
                    <th>Nom</th>
                    <th>keywords</th>
                    <th>categorie</th>
                    <th>genre</th>
                    <th>Modifier</th>
                    <th>Supprimer</th>
                </tr>
            </thead>
            <tbody>
                {% for s in serie %}
                    <tr>
                        <td>{{ s.nom }}</td>
                        <td>{{ s.keywords }}</td>
                        <td>{{ s.categorie.cat }}</td>
                        <td>{{ s.genre.gen }}</td>
                        <td></td>
                        <td></td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    {% endif %}
    {{ form(ajoutSerie) }}
{% endblock %}
