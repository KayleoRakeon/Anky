                                </div>
                            </div>
                            <div class="epingle">
                                <i class="far fa-bookmark"></i>
                            </div>
                        </article>

                        {% endif %}

                    {% endfor %}
                {% endfor %}
                </div>

            </section>

            {% for genre_u in user.genre %}

            <section class="container">
                <h2>{{genre_u}}</h2>
                <div class="nowrap">
                
                    {% for s in serie %}
                        {% for genre_s in s.genre %}
